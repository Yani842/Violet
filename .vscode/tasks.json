{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Violet build",
      "type": "cppbuild",
      "command": "g++",
      "args": [
        "-g",
        "-DWARF2",
        "-static-libgcc",
        "-static-libstdc++",
        "*.cpp",
        "src/*.cpp",
        "-o",
        "build/Violet.exe",
        "-std=c++2a",
        "-IC:/dev/SDL+openGL/include",
        "-LC:/dev/SDL+openGL/lib",
        "-lmingw32",
        "-lSDL2main",
        "-lSDL2",
        "-lopengl32",
        "-lglew32",
        "-mconsole",
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "compiler: C:\\dev\\mingw64\\bin\\g++.exe"
    }
  ]
}